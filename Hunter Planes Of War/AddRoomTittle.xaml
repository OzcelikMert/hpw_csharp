    <Grid>
        <TextBlock Text="Oluşturulacak Odanın İsimini Yazın" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,0" Foreground="Bisque" FontSize="20" FontFamily="Britannic Bold" />
        <TextBox x:Name="NewRoomName" MaxLength="10" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="34" Margin="0,0,0,15" FontFamily="Source Code Pro Black" FontSize="24"/>
        <Button x:Name="SaveNewRoomName" Click="SaveNewRoomName_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="90" Height="50" Content="Oluştur" Margin="0,0,0,10" FontFamily="Cooper Black" FontSize="18" Foreground="Green"/>
    </Grid>
</Window>
